<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.withpuppy.magicCode.member.service.MemberMapper">
	<!-- 선호 -->
	<!-- 로그인시 사용 -->
	<select id="memberLogin" resultType="com.withpuppy.magicCode.member.service.MemberVO">
		SELECT * FROM MEMBER
		WHERE MEMBER_ID = #{memberId}
		<if test="memberPw !=null">
			AND MEMBER_PW = #{memberPw}
		</if>
	</select>
	
	<!-- 전체회원 조회시 사용 -->
	<select id="memberSelectList" resultType="com.withpuppy.magicCode.member.service.MemberVO">
		SELECT * FROM MEMBER
	</select>
	
	<!-- 회원상세 조회시 사용 -->
	<select id="memberSelect" resultType="com.withpuppy.magicCode.member.service.MemberVO">
		SELECT * FROM MEMBER
		WHERE MEMBER_ID = #{memberId}
	</select>
	
	<!-- 닉네임중복 조회시 사용 -->
	<select id="memberSelectByNick" resultType="com.withpuppy.magicCode.member.service.MemberVO">
		SELECT * FROM MEMBER
		WHERE MEMBER_NICK = #{memberNick}
	</select>
	
	<!-- 일반회원 가입시 사용 -->
	<insert id="memberInsert">
		INSERT INTO MEMBER
		VALUES(#{memberId}, #{memberNick}, #{memberPw}, #{memberName}, #{memberTel}, #{memberAddr}, #{memberAuth})
	</insert>
	
	<!-- 시터, 훈련사, 미용사 회원가입시 사용 -->
	<insert id="memberInsertSitter"> 
		INSERT INTO MEMBER
		VALUES(#{memberId}, #{memberPw}, #{memberName}, #{memberTel}, #{memberAddr}, #{memberAuth})
	</insert>
	
	<update id="memberUpdate">
		UPDATE MEMBER
		<set>
			<if test="memberPw != null">MEMBER_PW = #{memberPw},</if>
			<if test="memberTel != null">MEMBER_TEL = #{memberTel},</if>
			<if test="memberAddr != null">MEMBER_ADDR = #{memberAddr}</if>
		</set>
		WHERE member_id = #{memberId} 
	</update>
	
	<!-- 관리자에의한 회원정보수정 -->
	<update id="memberUpdateByAdmin">
		UPDATE MEMBER
		<set>
			<if test="memberName != null">MEMBER_NAME = #{memberName},</if>
			<if test="memberTel != null">MEMBER_TEL = #{memberTel},</if>
			<if test="memberAddr != null">MEMBER_ADDR = #{memberAddr}</if>
		</set>
	</update>
	
	<delete id="memberDelete">
		delete from MEMBER
		where member_id = #{memberId}
	</delete>
</mapper>